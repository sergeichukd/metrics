<%= form_with(model: metric, local: true) do |form| %>
  <% if metric.errors.any? %>
    <div id="error_explanation" class="alert alert-warning" role="alert">
      <p><%= pluralize(metric.errors.count, "error") %> occured:</p>

      <ul>
        <% metric.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w-25">
    <div class="form-group field">
      <%= form.label :cold %>
      <%= form.number_field :cold, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= form.label :hot %>
      <%= form.number_field :hot, class: "form-control" %>
    </div>

    <div>
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
