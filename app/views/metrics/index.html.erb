<h1>Metrics</h1>

<%= link_to 'New Metric', new_metric_path, class: 'btn btn-primary mb-4' %>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Cold</th>
      <th>Hot</th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= "#{metric.created_at.month}-#{metric.created_at.year}" %></td>
        <td><%= metric.cold %></td>
        <td><%= metric.hot %></td>
      </tr>
    <% end %>
  </tbody>
</table>

