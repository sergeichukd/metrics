<h1>Metrics</h1>

<%= link_to 'New Metric', new_metric_path, class: 'btn btn-primary mb-4' %>

<table class='table table-hover'>
  <thead>
    <tr>
      <th scope='col'>Cold</th>
      <th scope='col'>Hot</th>
      <th colspan="3" scope='col'></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.cold %></td>
        <td><%= metric.hot %></td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

