<h1>Metrics</h1>
<h5 class='mb-4'><%= @user.first_name %> <%= @user.last_name %></h5>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Cold</th>
      <th>Hot</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= "#{metric.created_at.month}-#{metric.created_at.year}" %></td>
        <td><%= metric.cold %></td>
        <td><%= metric.hot %></td>
        <td><%= link_to 'Edit', show_metric_path(metric) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', index_path, class: 'btn btn-secondary mt-4'%>