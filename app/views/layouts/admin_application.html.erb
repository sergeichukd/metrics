<!DOCTYPE html>
<html>
  <head>
    <title>Metrics - Administration</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css'%>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-secondary text-white border-bottom shadow-sm">
      
      <%= link_to index_path, class: "my-0 mr-md-auto text-decoration-none"  do %>
        <h5 class="font-weight-bold text-white">Metrics - Administration</h5>
      <% end %>
      
      <nav>
          <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, class: 'btn btn-outline-light' %>
      </nav>
    </div>

    <div class='container'>
      <div class="alert alert-light">
        <%= notice %>
        <br />
        <%= alert %>
      </div>
      <div>
        <%= yield %>
      </div>
    </div>
    
  </body>
</html>
